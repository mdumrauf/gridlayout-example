<android.support.v7.widget.GridLayout xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    grid:alignmentMode="alignBounds"
    grid:columnCount="4"
    grid:rowOrderPreserved="false"
    grid:useDefaultMargins="true" >

    <TextView
        grid:layout_gravity="center_horizontal"
        grid:layout_columnSpan="4"
        android:text="Email setup"
        android:textSize="32dip" />

    <TextView
        grid:layout_gravity="left"
        grid:layout_columnSpan="4"
        android:text="You can configure email in just a few steps:"
        android:textSize="16dip" />

    <TextView
        grid:layout_gravity="right"
        android:text="Email address:" />

    <EditText android:ems="10" />

    <TextView
        grid:layout_gravity="right"
        grid:layout_column="0"
        android:text="Password:" />

    <EditText android:ems="8" />

    <android.support.v7.widget.Space
        grid:layout_gravity="fill"
        grid:layout_column="2"
        grid:layout_row="2"
        grid:layout_rowSpan="3" />

    <Button
        grid:layout_column="3"
        grid:layout_row="5"
        android:text="Manual setup" />

    <Button
        grid:layout_gravity="fill_horizontal"
        grid:layout_column="3"
        android:text="Next" />

</android.support.v7.widget.GridLayout>